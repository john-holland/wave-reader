{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2020"
        ],
        "types": ["chrome", "jest"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "es2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react",
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "baseUrl": ".",
        "paths": {
            "log-view-machine": ["../log-view-machine/dist/index.esm.js"],
            "log-view-machine/*": ["../log-view-machine/dist/*"]
        }
    },
    "include": [
        "src"
    ]
}